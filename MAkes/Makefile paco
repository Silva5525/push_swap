# this one is for testing with Paco

NAME = libftprintf.a

CC = cc

CFLAGS = -Wall -Wextra -Werror

SRCS = ft_printf.c ft_printf_xXpu.c

OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	make all -C ./libft/
	cp ./libft/libft.a ./libftprintf.a
	ar rcs $(NAME) $(OBJS)

$%.o: %.c
	$(CC) $(CFLAGS) -g -c $< -o $@./

libft:
	make -C ./libft/

clean:
	rm -f $(OBJS) 
	rm -f ./libft/*.o ./libft/bonus


fclean: clean
	rm -f $(NAME)
	rm -f ./libft/*.a

re: fclean all

.PHONY: all clean fclean re